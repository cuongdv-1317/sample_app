<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.title"), "#", id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("header.navbar.home"), root_path %></li>
          <li><%= link_to t("header.navbar.help"), "#" %></li>
          <% if logged_in? %>
            <li><%= link_to t("header.navbar.user"), "#" %></li>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
                <%= t("header.navbar.account") %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t("header.navbar.profile"), current_user %></li>
                <li><%= link_to t("header.navbar.setting"), '#' %></li>
                <li class="divider"></li>
                <%= form_with(url: logout_path, method: :delete, html: {class: "custom-logout-form"}) do |form| %>
                  <%= form.submit t("logout"), class: "custom-logout-button" %>
                <% end %>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("login"), login_path %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>
